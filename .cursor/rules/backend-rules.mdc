├── api/          # API 相关实现
├── cli/          # 命令行工具
├── core/         # 核心功能模块
├── libs/         # 通用库
├── matchers/     # NoneBot2 消息匹配器
├── models/       # 数据模型定义
├── routers/      # FastAPI 路由
├── schemas/      # Pydantic 模型
├── services/     # 业务服务层
├── systems/      # 系统级功能
└── tools/        # 工具类
```

